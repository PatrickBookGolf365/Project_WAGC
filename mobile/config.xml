<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="700000" id="io.cordova.LiveScore" version="4.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <platform name="ios">
        <icon height="180" src="res/icon/ios/Icon-180.png" width="180" />
        <icon height="60" src="res/icon/ios/Icon-60.png" width="60" />
        <icon height="76" src="res/icon/ios/Icon-76.png" width="76" />
        <icon height="40" src="res/icon/ios/Icon-40.png" width="40" />
        <icon height="57" src="res/icon/ios/Icon-57.png" width="57" />
        <icon height="72" src="res/icon/ios/Icon-72.png" width="72" />
        <icon height="167" src="res/icon/ios/Icon-167.png" width="167" />
        <icon height="29" src="res/icon/ios/Icon-29.png" width="29" />
        <icon height="50" src="res/icon/ios/Icon-50.png" width="50" />
        <icon height="167" src="res/icon/ios/Icon-167.png" width="167" />
    </platform>
    <name>LiveFeed</name>
    <description>
        Live Feed for golf
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Bookgolf365 Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-geolocation" spec="^4.0.1" />
    <engine name="android" spec="^7.0.0" />
    <engine name="ios" spec="^4.5.4" />
</widget>
